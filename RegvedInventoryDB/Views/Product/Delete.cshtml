@model RegvedInventoryDB.Models.Product
@{
    ViewBag.Title = "Delete Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete Product</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}

<div>
    <h3>Are you sure you want to delete this product?</h3>
    <div>
        <strong>Product Name:</strong> @Model.ProductName
    </div>
    <div>
        <strong>Description:</strong> @Model.Description
    </div>
    <div>
        <strong>Price:</strong> @Model.Price.ToString("C")
    </div>
    <div>
        <strong>Stock:</strong> @Model.Stock
    </div>
    <div>
        <strong>Manufacture Date:</strong> @Model.ManufactureDate.ToShortDateString()
    </div>
    <div>
        <strong>Category:</strong> @Model.CategoryName
    </div>
</div>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="ProductID" />
    <div class="form-check">
        <input class="form-check-input" type="checkbox" name="permanent" id="permanent">
        <label class="form-check-label" for="permanent">Permanently delete</label>
    </div>
    <button type="submit" class="btn btn-danger">Delete</button>
    <a class="btn btn-secondary" asp-action="Index">Cancel</a>
</form>