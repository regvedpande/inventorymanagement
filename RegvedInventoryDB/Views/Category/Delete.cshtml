@model RegvedInventoryDB.Models.Category
@{
    ViewBag.Title = "Delete Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete Category</h2>
<div>
    <h3>Are you sure you want to delete this category?</h3>
    <div>
        <strong>Category Name:</strong> @Model.CategoryName
    </div>
    <div>
        <strong>Description:</strong> @Model.Description
    </div>
</div>
<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="CategoryID" />
    <div class="form-check">
        <input class="form-check-input" type="checkbox" name="permanent" id="permanent">
        <label class="form-check-label" for="permanent">Permanently delete</label>
    </div>
    <button type="submit" class="btn btn-danger">Delete</button>
    <a class="btn btn-secondary" href="@Url.Action("Index", "Category")">Cancel</a>
</form>
