@model RegvedInventoryDB.Models.Vendor
@{
    ViewBag.Title = "Delete Vendor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete Vendor</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}

<div>
    <h3>Are you sure you want to delete this vendor?</h3>
    <div>
        <strong>Vendor Name:</strong> @Model.VendorName
    </div>
    <div>
        <strong>Description:</strong> @Model.Description
    </div>
    <div>
        <strong>Email:</strong> @Model.VendorEmail
    </div>
    <div>
        <strong>Address:</strong> @Model.Address
    </div>
    <div>
        <strong>Phone Number:</strong> @Model.PhoneNumber
    </div>
    <div>
        <strong>Category ID:</strong> @Model.CategoryID
    </div>
    <div>
        <strong>Product ID:</strong> @Model.ProductID
    </div>
    <div>
        <strong>Quantity:</strong> @Model.Quantity
    </div>
    <div>
        <strong>Price Per Unit:</strong> @Model.PricePerUnit.ToString("C")
    </div>
    <div>
        <strong>Amount:</strong> @Model.Amount.ToString("C")
    </div>
</div>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="VendorID" />
    <div class="form-check">
        <input class="form-check-input" type="checkbox" name="permanent" id="permanent" />
        <label class="form-check-label" for="permanent">Permanently delete</label>
    </div>
    <button type="submit" class="btn btn-danger">Delete</button>
    <a class="btn btn-secondary" asp-action="Index">Cancel</a>
</form>